<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parent_profiles"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/image_150"
            android:layout_height="@dimen/image_150"
            android:id="@+id/ivMotherImage"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            tools:srcCompat="@drawable/yellow"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMotherProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8dp"
            tools:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/image_150"
            android:layout_height="@dimen/image_150"
            android:id="@+id/ivFatherImage"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            tools:srcCompat="@drawable/black"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvFatherProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="@string/app_name" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>